pipeline {
    agent {
        label 'NODEJS'
    }

    stages {
        stage('Download Dependencies') {
            steps {
                sh '''
                npm install 
                npm run build
                '''
            }
        }



        stage('preapare Artifact') {
            steps {
                sh '''
                 zip -r ../frontend.zip *
                 '''
            }
        }

        stage('Upload Artifacts') {
            steps {
                sh '''
                  curl -f -v -u admin:admin123 --upload-file /var/lib/jenkins/workspace/CI-Pipelines/frontend.zip http://172.31.11.166:8081/repository/frontend/frontend.zip
                  '''
           }

        }
    }
}