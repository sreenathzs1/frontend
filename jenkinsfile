pipeline {
    agent any

    stages {


        stage('preapare Artifact') {
            steps {
                sh '''
                 zip -r ../frontend.zip *
                 '''
            }
        }

        stage('Upload Artifactory') {
            steps {
                sh '''
                  curl -v -u admin:admin123 --upload-file frontend.zip http://172.31.3.255:8081/repository/frontend/frontend.zip
                #curl -v -u admin:admin123 --upload-file pom.xml http://localhost:8081/repository/maven-releases/org/foo/1.0/foo-1.0.pom
                  '''
            }

        }
    }
}